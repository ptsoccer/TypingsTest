{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "ES2016",
        "outDir": "./dist",
        "baseUrl": ".",
        "moduleResolution": "Node",
        "typeRoots": [ "./lib/types" ],
        "paths": {
            "*": [ "./lib/*" ]
        },
        "traceResolution": true
    },
    "exclude": ["node_modules"]
}
